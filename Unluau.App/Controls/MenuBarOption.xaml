<UserControl x:Class="Unluau.App.Controls.MenuBarOption"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Unluau.App.Controls" xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d">
    <Border Width="50" x:Name="Main" MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave" Background="{DynamicResource Charchoal}" CornerRadius="0" Height="50">
        <iconPacks:PackIconMaterial x:Name="Icon" Grid.Column="1" Kind="{Binding IconName2}" VerticalAlignment="Center" HorizontalAlignment="Center"  Width="25" Height="25" Foreground="{StaticResource LightCharchoal}"></iconPacks:PackIconMaterial>
    </Border>
</UserControl>
